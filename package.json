{
  "name": "here",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite",
    "dev:backend": "convex dev --local",
    "dev:cloud": "npm-run-all --parallel dev:frontend dev:backend:cloud",
    "dev:backend:cloud": "convex dev",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clear:chat": "npx convex run admin:clearChat",
    "clear:profiles": "npx convex run admin:clearProfiles",
    "clear:presence": "npx convex run admin:clearPresence",
    "clear:objects": "npx convex run admin:clearMapObjects",
    "clear:npcs": "npx convex run npcEngine:clearAll",
    "backfill:maps": "npx convex run admin:backfillMaps",
    "reset:map": "npx convex run admin:resetProfileMap",
    "reset:all-maps": "npx convex run admin:resetAllProfileMaps",
    "dump": "node scripts/dump-state.mjs",
    "dump:full": "node scripts/dump-state.mjs --tiles"
  },
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "@pixi/sound": "^6.0.1",
    "convex": "^1.31.7",
    "pixi.js": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
